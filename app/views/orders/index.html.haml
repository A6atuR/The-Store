.container
  = link_to t('links.home'), books_path
  = link_to t('links.shop'), categories_path
  .links
    = link_to t('links.shopping_cart'), shopping_cart_path
    = link_to t('links.orders'), orders_path
    = link_to t('links.settings'), edit_customer_registration_path
    = link_to t('links.sign_out'), destroy_customer_session_path, method: :delete
  %h3=t('orders.title')
  %h4=t('orders.in_progress')
  %table
    %tr
      %th=t('order_items.image')
      %th=t('order_items.book')
      %th=t('order_items.book_price')
      %th=t('order_items.quantity')
      %th=t('order_items.total')
    - @orders.in_progress.first.order_items.each do |order_item|
      %tr
        %td= image_tag(order_item.book.image, size: "100x75", class: "image")
        %td.col_title= order_item.book.title
        %td.col_table $ #{order_item.book.price}
        %td.col_table= order_item.quantity
        %td.col_table $ #{order_item.price}
  .subtotal    
    %strong=t('orders.subtotal', order: @orders.in_progress.first.total_price)
  = button_to t('orders.go_to_cart'), shopping_cart_path, method: :get
  %h4=t('orders.in_queue')
  %table
    %tr
      %th=t('orders.number')
      %th=t('orders.completed_at')
      %th=t('orders.total')
    - @orders.in_queue.each do |order|
      %tr
        %td.col_title= order.id
        %td.col_table= order.completed_at
        %td.col_table $ #{order.total_price}
        %td.col_table= link_to t('orders.view'), order_path(order), class: 'link', method: :get
  %h4=t('orders.in_delivery')
  %table
    %tr
      %th=t('orders.number')
      %th=t('orders.completed_at')
      %th=t('orders.total')
    - @orders.in_delivery.each do |order|
      %tr
        %td.col_title= order.id
        %td.col_table= order.completed_at
        %td.col_table $ #{order.total_price}
        %td.col_table= link_to t('orders.view'), order_path(order), method: :get
  %h4=t('orders.delivered')
  %table
    %tr
      %th=t('orders.number')
      %th=t('orders.completed_at')
      %th=t('orders.total')
    - @orders.delivered.each do |order|
      %tr
        %td.col_title= order.id
        %td.col_table= order.completed_at
        %td.col_table $ #{order.total_price}
        %td.col_table= link_to t('orders.view'), order_path(order), method: :get