.container
  = link_to "Home", books_path
  = link_to "Shop", categories_path
  .links
    = link_to "Shopping Cart", shopping_cart_path
    = link_to "Orders", orders_path
    = link_to "Settings", edit_customer_registration_path
    = link_to "Sign out", destroy_customer_session_path, method: :delete
  %br
  %br
  = link_to "Back to orders", orders_path
  %h3 Order #{@order.id}
  %h4 #{@order.state}
  %table
    %tr
      %th Image
      %th Book title
      %th Price
      %th Quantity
      %th Total
    - @order.order_items.each do |order_item|
      %tr
        %td= image_tag(order_item.book.image, size: "200x150", class: "image")
        %td.col_title= order_item.book.title
        %td.col_table $ #{order_item.book.price}
        %td.col_table= order_item.quantity
        %td.col_table $ #{order_item.price}
  .subtotal    
    %strong SUBTOTAL: $ #{@order.total_price}